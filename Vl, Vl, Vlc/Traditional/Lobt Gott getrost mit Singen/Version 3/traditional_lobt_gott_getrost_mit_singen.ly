      \fill-line {
        \on-the-fly #print-page-number-check-first
        "Traditional - Lobt Gott getrost mit Singen (Contre-Chant)" \fromproperty #'page:page-number-string
      }
    }
    evenFooterMarkup = \oddFooterMarkup
  } \score {
    \music
    \layout {}
  }

  \score {
    \unfoldRepeats \music

    \midi {
      \context {
        \Score
      }
    }
  }
}