      \fill-line {
        \if \should-print-page-number
        "Greg Frauenhoff - Adagio d-moll f√ºr 2 Geigen und Cello" \fromproperty #'page:page-number-string
      }
    }
    evenFooterMarkup = \oddFooterMarkup
  } \score {
    \music
    \layout {}
  }

  \score {
    \unfoldRepeats \music

    \midi {
      \context {
