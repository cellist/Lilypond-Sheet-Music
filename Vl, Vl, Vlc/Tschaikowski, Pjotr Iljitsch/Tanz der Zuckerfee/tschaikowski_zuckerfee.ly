\version "2.20.2"
\include "deutsch.ly"

#(set-global-staff-size 20)

\header {
  title     = \markup \bold \italic "Tanz der Zuckerfee"
  composer  = "Pjotr Iljitsch Tschaikowski (1840-1893)"
