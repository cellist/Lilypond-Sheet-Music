vb = \relative c {
  \voiceconsts
  \clef "bass"
  
  \repeat volta 2 {
    r4 e( c)
    r h'( g)
    r h( g)
    r c( c,)

    r c( c')
    h h h
    c d( d,)
    g( d) g,
  }

  \repeat volta 2 {
    r h( g)
    r a'( a,)
    r d( h)
    r c( c,)

    r f( f')
    e e e
    f g( g,)
    c( g) c,
  }
}