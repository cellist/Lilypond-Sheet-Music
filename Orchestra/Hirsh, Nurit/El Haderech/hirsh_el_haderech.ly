\version "2.24.1"
\include "deutsch.ly"

#(set-global-staff-size 17)

\header {
  title     = \markup \bold \italic "El Haderech"
  subtitle  = "- für 7 Celli -"
  composer  = "Nurit Hirsh (*1942)"
  arranger  = "arr.: Tabea Schwartz, Volker Leuchte, Hauke Hack"
  enteredby = "cellist (2023-06-03)"
  piece     = \markup \center-column \tiny {
    "1. rhythmische Improvisation, Melodie steigt solo ein,"
    "2. Melodie übergibt an Bass-Gruppe (Cello IV ff.),"
    "3. arco tutti, 4. pizz: Cello II beginnt in Vierteln,"
    "5. arco ppp, großes crescendo, Schluß-Glissandi nach oben"
    }
}

