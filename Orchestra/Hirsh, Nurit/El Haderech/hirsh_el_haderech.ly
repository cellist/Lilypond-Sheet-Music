      \fill-line {
        \if \should-print-page-number
        "Nurit Hirsh - El Haderech" \fromproperty #'page:page-number-string
      }
    }
    evenFooterMarkup = \oddFooterMarkup
  } \score {
    \music
    \layout {}
  }

  \score {
