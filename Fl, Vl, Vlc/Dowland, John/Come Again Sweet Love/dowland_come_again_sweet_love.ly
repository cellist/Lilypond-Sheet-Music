      \fill-line {
        \if \should-print-page-number
        "John Dowland - \"Come Again, Sweet Love doth Now Invite\"" \fromproperty #'page:page-number-string
      }
    }
    evenFooterMarkup = \oddFooterMarkup
  } \score {
