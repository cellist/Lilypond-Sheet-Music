\version "2.24.4"
\include "deutsch.ly"
  
#(set-global-staff-size 19)

\header {
  title     = \markup \bold \italic "Cerf Volant"
  composer  = "Bruno Coulais (*1954)"
  arranger  = "arr.: SÃ©bastien Perez"
